MainScreen:

<MainScreen>:
    name: 'main'
    orientation: 'vertical'

    MDBoxLayout:
        orientation: 'vertical'
        spacing: '20dp'
        size_hint: 1, 0.25
        pos_hint: {'center_x': 0.5, 'top': 0.95}

        MDTextField:
            id: steam_id_input
            hint_text: 'Steam ID' 
            helper_text: 'Enter Steam ID and press Enter to generate user details'
            helper_text_mode: 'on_focus'
            icon_left: 'steam'
            max_text_length: 17
            size_hint_x: 0.7
            pos_hint: {'center_x': 0.5, 'center_y':0.5}
            #on_text_validate: root.get_steam_id(self)

        # MDLabel:
        #     id: personaname
        #     text: 'Username: ' + root.personaname
        #     size_hint_x: 0.7
        #     pos_hint: {'center_x': 0.5, 'center_y':0.5}

        # MDLabel:
        #     id: time_created
        #     text: 'Date Created: ' + root.time_created
        #     size_hint_x: 0.7
        #     pos_hint: {'center_x': 0.5, 'center_y':0.5}

        MDRectangleFlatIconButton:
            id: profile_url
            text: 'Steam Profile'
            icon: 'web'
            pos_hint: {'center_x': 0.5, 'top':0}
            on_release: root.open_link(root.profile_url)

        MDBoxLayout:
            orientation: 'horizontal'
            spacing: '20dp'
            size_hint_x: None
            width: self.minimum_width  # Ensure that the width of the box is not calculated automatically
            pos_hint: {'center_x': 0.5, 'top': 0.95}
            anchor_x: 'center'  # Center align the box horizontally
            anchor_y: 'top'  # Align the box to the top
            
            MDRectangleFlatIconButton:
                id: profile_url
                text: 'Cold Start'
                icon: 'new-box'
                on_release: root.cold_start_btn(steam_id_input.text)

            MDRectangleFlatIconButton:
                id: profile_url
                text: 'FunkSVD'
                icon: 'account-sync'
                on_release: root.funk_svd_btn(steam_id_input.text)

            MDRectangleFlatIconButton:
                id: profile_url
                text: 'NCF Recommendation'
                icon: 'brain'
                on_release: root.ncf_btn(steam_id_input.text)

    MDStackLayout:
        id: image_grid
        pos_hint: {'center_x': 0.6, 'top': 0.65}
        spacing: '10dp'
        